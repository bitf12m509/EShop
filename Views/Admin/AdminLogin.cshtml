    <link href="~/Content/bootstrap-theme.min.css" rel="stylesheet" />

    <link href="~/Content/datePicker.css" rel="stylesheet" />
    <link href="~/Content/pro_dropline.css" rel="stylesheet" />
    <link href="~/Content/pro_dropline_ie.css" rel="stylesheet" />
    <link href="~/Content/screen.css" rel="stylesheet" />


    <script src="~/Scripts/adminJS/jquery-1.4.1.min.js"></script>

    <script src="~/Scripts/adminJS/custom_jquery.js" type="text/javascript"></script>


    <script src="~/Scripts/adminJS/jquery.pngFix.pack.js" type="text/javascript"></script>

