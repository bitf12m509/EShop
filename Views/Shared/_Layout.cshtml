                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </header>
    <div class="header-middle">
        <!--header-middle-->
        <div class="container">
            <div class="row">
                <div class="col-sm-4">
                    <div class="pull-left">
                        <a href="/Home/index"><img src="~/Content/themes/base/images/logo12.png" class="img-rounded" /></a>
                    </div>
                    
                </div>
                <div class="col-sm-8">
                    <div class="pull-right">
                        <ul class="nav navbar-nav">
                           @if (Session["uname"] == null) { 
                            <li><a href="/Home/Login"><img src="~/Content/themes/base/images/login.jpg" class="img-rounded" />Login</a></li>
                            <li><a href="/Admin/AdminLogin"><img src="~/Content/themes/base/images/login.jpg" class="img-rounded" />Admin Login</a></li>
                           }
                           else
                           {
                                <li><a href="/User/WishList"><img src="~/Content/themes/base/images/fvrt.jpg" class="img-rounded" /> Wishlist</a></li>

                            <li><a href="/User/Cart"><img src="~/Content/themes/base/images/cart.png" class="img-rounded" /> Cart</a></li>
                            <li><a href="/User/Logout"><img src="~/Content/themes/base/images/login.jpg" class="img-rounded" />Logout</a></li>
                           }
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div><!--middle header end-->
    <div class="header-bottom navbar navbar-inverse">
        <!--header-bottom-->
        <div>
            <div class="col-sm-12">
                <ul class="nav navbar-nav">
                    @if (Session["uname"] != null)
                    { <li class="active"><a href="/User/index">Home</a></li>}
                    else {<li class="active"><a href="/Home/index">Home</a></li> }
                    
                    <li><a href="/Home/ContactUs">Contact Us</a></li>
                    <li><a href="/Home/AboutUs">About Us</a></li>
                    
                </ul>
               @if(Session["uname"] != null)
               {
                   
                  
                <form class="navbar-form navbar-left pull-right" method="post" action="/User/SearchProduct" role="search">
                    <div class="form-group">
                        <input class="form-control" id="search" name="Search" type="text" placeholder="search here by product name" />
                    </div>
                    <button type="submit" id="b2" class="btn btn-success">Search</button>
                </form>
               }
            </div>
        </div>
    </div><!--end header bottom-->
   
    @Scripts.Render("~/bundles/jquery")
   


