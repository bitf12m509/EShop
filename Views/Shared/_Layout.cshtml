<body>
   
    <header id="header" class="navbar navbar-inverse">
        <div class="header_top">
            <div class="container">
                <div class="row">
                    <div class="col-sm-6">
                        <div class="contactinfo">
                            <ul class="nav nav-pills">
                                <li><a href="#"><img src="~/Content/themes/base/images/call.jpg" class="img-rounded" /> +92 334 964 2000</a></li>
                                <li><a href="#"><img src="~/Content/themes/base/images/mail.jpg" class="img-rounded" /> info@samsung.com</a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="social-icons pull-right">
                            <ul class="nav navbar-nav">
                                <li><a href="#"><img src="~/Content/themes/base/images/fb.png" class="img-rounded" /></a></li>
                                <li><a href="#"><img src="~/Content/themes/base/images/in.png" class="img-rounded" /></a></li>
                                <li><a href="#"><img src="~/Content/themes/base/images/twitter.jpg" class="img-rounded" /></a></li>
